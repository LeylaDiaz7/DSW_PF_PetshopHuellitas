@model PetShop_Huellitas.Models.Venta

@{
    ViewData["Title"] = "RegistrarVenta";

    Layout = "~/Views/Shared/LayoutMaster.cshtml";
    var productos = ViewBag.Productos as List<PetShop_Huellitas.Models.Producto>;
}

<h1 class="text-center">Registrar Venta</h1>

<h4>Ingrese datos del Cliente</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="RegistrarVenta">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <input asp-for="IdCliente" class="form-control" />
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Distrito" class="control-label"></label>
                <input asp-for="Distrito" class="form-control" />
                <span asp-validation-for="Distrito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTransaccion" class="control-label"></label>
                <input asp-for="IdTransaccion" class="form-control" />
                <span asp-validation-for="IdTransaccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Productos</label>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var producto in productos)
                        {
                            <tr>
                                <td>
                                    <input type="hidden" name="idProductos" value="@producto.IdPro" />
                                    @producto.Nombre
                                </td>
                                <td>
                                    <span>@producto.Precio</span>
                                </td>
                                <td>
                                    <input type="number" name="cantidades" class="form-control" value="0" min="0" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListarVentas" class="btn btn-secondary">Volver a Lista</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
