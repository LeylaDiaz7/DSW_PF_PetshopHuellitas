@model IEnumerable<PetShop_Huellitas.Models.Usuario>

@{
    ViewData["Title"] = "ListadoUsuario";
    Layout = "~/Views/Shared/LayoutMaster.cshtml";

}

<div class="container mt-4">
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Gestión de usuarios</h1>
    <a asp-action="RegistrarUsuario" class="btn btn-outline-success">Crear nuevo usuario</a>

</div>

<table class="table table-striped table-hover table-rounded">
    <thead>
        <tr class="bg-warning">
            <th>
                @Html.DisplayNameFor(model => model.IdUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditarUsuario", new {  id=item.IdUsuario  }, new { @class = "btn btn-primary btn-sm" }) |
  
                    <button type="button" class="btn btn-danger ml-2 eliminar"
                             data-url="@Url.Action("EliminarUsuario", "Usuario", new { id = item.IdUsuario })">
                       Eliminar
                    </button>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

@section Scripts {
    <script src="~/js/Modals.js"></script>
}
