@model PetShop_Huellitas.Models.Categoria

@{
    ViewData["Title"] = "EliminarCategoria";
}

<h1>Eliminar Categoria</h1>

<h3 style="text-align:center">Estas seguro de eliminar esta categoria?</h3>
<div>
    <h4 style="color:red;text-align:center">Esta acción será irreversible</h4>
    <hr />

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCategoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Activo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Activo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>
    <div class="text-center">
        <form asp-action="EliminarCategoria">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </form>
    </div>
    <div>
        <a asp-action="ListadoCategoria">Volver a Listar</a>
    </div>
</div>
