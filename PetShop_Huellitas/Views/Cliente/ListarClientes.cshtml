@model IEnumerable<PetShop_Huellitas.Models.Cliente>

@{
    ViewData["Title"] = "ListarClientes";
    Layout = "~/Views/Shared/LayoutMaster.cshtml";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Gestión de clientes</h1>
        <a asp-action="CrearCliente" class="btn btn-outline-success">
            <i class="fas fa-plus"></i>  Nuevo Cliente
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-rounded">
            <thead>
                <tr class="bg-warning">
                    <th>
                        @Html.DisplayNameFor(model => model.IdCli)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombres)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apellidos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Direccion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefono)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dni)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Correo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaRegistro)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCli)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellidos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dni)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Correo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaRegistro)
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                @Html.ActionLink("Editar", "EditarCliente", new { id = item.IdCli }, new { @class = "btn btn-primary btn-sm" }) |
                                <button type="button" class="btn btn-danger ml-2 eliminar"
                                        data-url="@Url.Action("EliminarCliente", "Cliente", new { idCli = item.IdCli })">
                                    Eliminar
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/Modals.js"></script>
}
