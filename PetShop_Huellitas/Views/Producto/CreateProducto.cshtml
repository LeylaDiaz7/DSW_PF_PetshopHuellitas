@model PetShop_Huellitas.Models.Producto

@{
    ViewData["Title"] = "Crear producto";
    Layout = "~/Views/Shared/LayoutMaster.cshtml";
}

<h1>Nuevo producto</h1>
<hr />

<div class="container">

    <div class="row">
        <div class="col-md-6">
            <form asp-action="CreateProducto">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3 row">
                    <label asp-for="Marca" class="control-label col-sm-2"></label>
                    <div class="col-sm-10">
                        <input asp-for="Marca" class="form-control" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-3 row">
                    <label asp-for="IdCategoria" class="control-label col-sm-2"></label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(model => model.IdCategoria, (SelectList)ViewBag.categorias, "--Seleccione una categoría--", new { @class = "form-control" })
                        <span asp-validation-for="IdCategoria" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-3 row">
                    <label asp-for="Nombre" class="control-label col-sm-2"></label>
                    <div class="col-sm-10">
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label asp-for="Detalles" class="control-label col-sm-2"></label>
                    <div class="col-sm-10">
                        <input asp-for="Detalles" class="form-control" />
                        <span asp-validation-for="Detalles" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label asp-for="UrlImg" class="control-label col-sm-2"></label>
                    <div class="col-sm-10">
                        <input type="file" asp-for="UrlImg" class="form-control" />
                        <span asp-validation-for="UrlImg" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label asp-for="Stock" class="control-label col-sm-2"></label>
                    <div class="col-sm-10">
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label asp-for="Precio" class="control-label col-sm-2"></label>
                    <div class="col-sm-10">
                        <input asp-for="Precio" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group form-check mb-3 row">
                    <div class="col-sm-10">
                        <label class="form-check-label col-sm-2">
                            <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                        </label>
                    </div>
                </div>
                <div class="form-group text-end">
                    <input type="submit" value="Crear producto" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

<div class="mb-5 row">
    <a asp-action="IndexProductos"> <img class="icon" src="@Url.Content("~/img/imgButtons/flecha-derecha.png")"></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
